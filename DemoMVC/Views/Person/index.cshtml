@model MvcMovie.Models.Person

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<h2>Nhập thông tin cá nhân</h2>

<!-- Hiển thị thông báo nếu có -->
@if (ViewBag.infoPerson != null)
{
    <div class="alert alert-success">
        @ViewBag.infoPerson
    </div>
}

<!-- Form nhập thông tin -->
<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="PersonId">Mã số:</label>
        <input asp-for="PersonId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FullName">Họ và tên:</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Địa chỉ:</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Gửi</button>
</form>
