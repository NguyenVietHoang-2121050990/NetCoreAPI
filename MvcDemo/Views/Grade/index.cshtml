@{
    ViewBag.Title = "Tính điểm môn học";
}
<h2>Tính điểm môn học</h2>

<form method="post">
    <label>Điểm A (60%):</label>
    <input type="text" name="ScoreA" required />

    <label>Điểm B (30%):</label>
    <input type="text" name="ScoreB" required />

    <label>Điểm C (10%):</label>
    <input type="text" name="ScoreC" required />

    <button type="submit">Tính điểm</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
